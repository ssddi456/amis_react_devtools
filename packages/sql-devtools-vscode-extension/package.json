{
  "name": "sql-devtools-vscode-extension",
  "displayName": "SQL DevTools VSCode Extension",
  "description": "A Visual Studio Code extension for Hive SQL development, providing features like code completion, syntax checking, and more.",
  "version": "0.1.0",
  "publisher": "ssddi456",
  "engines": {
    "vscode": "^1.104.0"
  },
  "activationEvents": [
    "onLanguage:hivesql"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hivesql",
        "aliases": [
          "HiveSQL",
          "hive",
          "Hive"
        ],
        "extensions": [
          ".hivesql",
          ".hive",
          ".sql"
        ],
        "configuration": "./hive.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hivesql",
        "scopeName": "source.hivesql",
        "path": "./syntaxes/hive.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SQL DevTools Configuration",
      "properties": {
        "sqlDevTools.enableCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable SQL code completion."
        },
        "sqlDevTools.enableSyntaxCheck": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable SQL syntax checking."
        },
        "sqlDevTools.tableInfos": {
          "type": "array",
          "default": [],
          "description": "table information.",
          "items": {
            "type": "object",
            "properties": {
              "db_name": {
                "type": "string",
                "description": "Database name"
              },
              "table_name": {
                "type": "string",
                "description": "Table name"
              },
              "table_id": {
                "type": "number",
                "description": "Unique identifier for the table"
              },
              "description": {
                "type": "string",
                "description": "Description of the table"
              },
              "column_list": {
                "type": "array",
                "description": "List of columns in the table",
                "items": {
                  "type": "object",
                  "properties": {
                    "column_name": {
                      "type": "string",
                      "description": "Column name"
                    },
                    "data_type_string": {
                      "type": "string",
                      "description": "Data type of the column"
                    },
                    "description": {
                      "type": "string",
                      "description": "Comment about the column"
                    }
                  },
                  "required": [
                    "column_name",
                    "data_type_string"
                  ]
                }
              }
            },
            "required": [
              "db_name",
              "table_name",
              "column_list"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "rspack build --config ./config/rspack.config.js",
    "dev": "rspack build -w --config ./config/rspack.config.js",
    "vscode:build": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "typescript": "5.9.2",
    "@types/vscode": "1.104.0",
    "@rspack/cli": "1.5.3",
    "@rspack/core": "1.5.3"
  },
  "dependencies": {
    "@amis-devtools/sql-language-service": "file:../sql-language-service"
  },
  "vsce": {
    "dependencies": false,
    "yarn": false
  }
}